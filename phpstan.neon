includes:
    - vendor/phpstan/phpstan-strict-rules/rules.neon

parameters:
    level: max
    tmpDir: var/phpstan

    treatPhpDocTypesAsCertain: false
    reportUnmatchedIgnoredErrors: true

    paths:
        - library
        - bootstrap
        - src
        - tests

    ignoreErrors:
        - '#Method .+ has parameter \$container with generic class LeanPHP\\Container but does not specify its types: ServiceType#' # needed until we figure out the genericity in the Container
        -
            message: '#Cannot cast array\|bool\|float\|int\|object\|string\|null to #'
            paths:
                - library/src/Container.php
                - library/src/ConfigRepository.php
